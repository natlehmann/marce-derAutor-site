<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">


	<profiles>
		<profile>
			<id>dev</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<base.url>http://localhost:8080/derechosAutor</base.url>
				<tomcat.home></tomcat.home>
				<apache.home>/var/www</apache.home>
				
				<db.host></db.host>
				<db.schema></db.schema>
				<db.user></db.user>
				<db.password></db.password>
				
				<db.host.ext></db.host.ext>
				<db.schema.ext></db.schema.ext>
				<db.user.ext></db.user.ext>
				<db.password.ext></db.password.ext>
				<db.driverClass.ext>com.microsoft.sqlserver.jdbc.SQLServerDriver</db.driverClass.ext>
				<db.port.ext>1433</db.port.ext>
				<db.dialect.ext>org.hibernate.dialect.SQLServer2008Dialect</db.dialect.ext>
				<db.protocol.ext>sqlserver</db.protocol.ext>
				
				<smtp.hostname></smtp.hostname>
				<smtp.username></smtp.username>
				<smtp.password></smtp.password>
				<smtp.port></smtp.port>
				<smtp.socket.factory></smtp.socket.factory>
				<mail.debug></mail.debug>
				<mail.from></mail.from>
			</properties>
		</profile>
	</profiles>

</settings>